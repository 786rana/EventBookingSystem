@model List<EventBookingSystem.Models.MarriageHall>


<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-info d-flex justify-content-between align-items-center">
            <h2>Marriage Hall</h2>
            <a href="/MarriageHall/Marriage">
                <input type="button" value="Add Marriage Hall" class="btn btn-light" />
            </a>
        </div>
        <div class="card-body">

            <table class="table table-responsive table-border">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Location</th>
                        <th>Detail</th>
                        <th>Image</th>
                        <th style="width:160px;">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var Ebs in Model)
                    {
                        <tr>
                            <td>@Ebs.Id</td>
                            <td>@Ebs.Name</td>
                            <td>@Ebs.Phone</td>
                            <td>@Ebs.Location</td>
                            <td>@Ebs.Details</td>
                            <td><img src="@Ebs.ImageUrl" style="width:100px;"> </td>
                            <td>
                                <a href="/MarriageHall/Edit?Id=@Ebs.Id"><input type="button" value="Edit" class="btn  btn-primary" /></a>
                                <a href="/MarriageHall/Delete?Id=@Ebs.Id"><input type="button" value="Delete" class="btn btn-danger" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

