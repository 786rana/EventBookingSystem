@model Order

@{
   // List<OrderDetail> Od = (List<OrderDetail>)ViewBag.OrderDetail;
    List<MarriageHall> mhs = (List<MarriageHall>)ViewBag.MarraigeHallServices;
    List<Services> ser = (List<Services>)ViewBag.services;
}
<section id="_contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="row gx-lg-0 gy-4">
            <div class="col-lg-12">
                <h2 class="text-center">New Order</h2><br />
                <form action="#" id="mForm" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <input type="hidden" asp-for="Id" />
                        <div class="col-md-4 form-group">
                            <label for="UserId">User</label>
                            <input asp-for="UserId" class="form-control"  required>
                        </div>
                        <div class="col-md-4 form-group mt-3 mt-md-0">
                            <label for="NetAmount">Net Amount</label>
                            <input asp-for="NetAmount" class="form-control"  required>
                        </div>
                        <div class="col-md-4 form-group mt-6 mt-md-0">
                            <label for="CreatedDate">Date</label>
                            <input asp-for="CreatedDate" class="form-control"  required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label for="Discount">Discount</label>
                            <input asp-for="Discount" class="form-control" required>
                        </div>
                        <div class="col-md-4 form-group mt-3 mt-md-0">
                            <label for="Details">Detail</label>
                            <input asp-for="Total" class="form-control"  required>
                        </div>
                    </div>
                    <div class="col-md-12 pull-right">
                        <input type="button" value="Add" class="btn btn-primary" />
                    </div>
                    <div class="col-md-12">
                        <table id="tableId" class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Price</th>
                                </tr>
                                <tr>
                                    <th>Marriage Hall</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model !=null && Model.Id>0 && Model.MarriagesHall != null && Model.MarriagesHall.Count>0)
                                {
                                    foreach(var Ebs in Model.MarriagesHall)
                                    {
                                        <tr>
                                            <td>
                                                <input type="hidden" class="MarriagesHallId" value="@Ebs.Id" />
                                                <select class="form-control MarriagesHallId">
                                                    <option value="0">Select</option>
                                                    @foreach(var item in mhs)
                                                    {
                                                        if(Ebs.Id==item.Id)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>

                                                        }
                                                        else
                                                        {
                                                            <option value="@Ebs.Id">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </td>
                                            <td><input type="text" value="@Ebs.Price" class="form-control price"/></td>
                                            <input>
                                        </tr>

                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" class="MarriagesHallId" />
                                            <select class="form-control MarriagesHallId">
                                                <option value="o">Select</option>
                                                @foreach(var Ebs in mhs)
                                                {
                                                    <option value="@Ebs.Id">@Ebs.Name</option>
                                                }
                                            </select>
                                        </td>
                                        <td><input type="text" class="form-control price"/></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                   
                    <div class="text-left"><button type="submit">Save</button></div>
                </form>
            </div><!-- End Contact Form -->

        </div>

    </div>
</section><!-- End Contact Section -->
