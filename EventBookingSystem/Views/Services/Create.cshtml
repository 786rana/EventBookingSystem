@model EventBookingSystem.Models.Servicess

<section id="_contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="row gx-lg-0 gy-4">
            <div class="col-lg-12">
                <h2 class="text-center">Services</h2><br />
                <form action="/Services/Save" id="mForm" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="col-md-4 form-group mt-3 mt-md-0">
                            <label for="Name">Name</label>
                            <input asp-for="Name" class="form-control" required>
                        </div>
                        <div class="text-left"><button type="submit">Save</button></div>
                   </div>  
                </form>
            </div><!-- End Contact Form -->

        </div>

    </div>
</section><!-- End Contact Section -->
