@model EventBookingSystem.Models.Servicess


<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-info d-flex justify-content-between align-items-center">
            <h2>Services</h2>
        </div>
        <div class="card-body">
            <section id="_contact" class="contact">
                <div class="container" data-aos="fade-up">
                    <div class="row gx-lg-0 gy-4">
                        <div class="col-lg-12">
                            <form action="/Services/Save" id="mForm" method="post" role="form" class="php-email-form" enctype="multipart/form-data">
                                <div class="row">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="ImageUrl" />

                                    <div class="col-md-4 form-group mt-3 mt-md-0">
                                        <label for="Name">Name</label>
                                        <input asp-for="Name" class="form-control" required>
                                    </div>
                                    <div class="col-md-8 form-group mt-3 mt-md-0">
                                        <label for="Name">Details</label>
                                        <input asp-for="Detail" class="form-control" required>
                                    </div>

                                    <div class="col-md-4 form-group mt-3 mt-md-0">
                                        <label for="Name">Image</label>
                                        <input type="file" name="imageFile" id="imageFile" class="form-control" />
                                    </div>
                                    <div class="text-left"><button type="submit" class="btn btn-primary">Save</button></div>
                                </div>
                            </form>
                        </div><!-- End Contact Form -->

                    </div>

                </div>
            </section><!-- End Contact Section -->

        </div>
    </div>
</div>

