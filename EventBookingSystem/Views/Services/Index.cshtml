<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-info d-flex justify-content-between align-items-center">
            <h2>Services</h2>
            <a href="/Services/Create">
                <input type="button" value="Add Services" class="btn btn-light" />
            </a>
        </div>
        <div class="card-body">
            <table class="table table-responsive table-border">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Ebs in Model)
                    {
                        <tr>
                            <td>@Ebs.Id</td>
                            <td>@Ebs.Name</td>
                            <td>
                                <a href="/Services/Edit?Id=@Ebs.Id">
                                    <input type="button" value="Edit" class="btn btn-primary" />
                                </a>
                                <a href="/Services/Delete?Id=@Ebs.Id">
                                    <input type="button" value="Delete" class="btn btn-danger" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

