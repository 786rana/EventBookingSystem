@model EventBookingSystem.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Event Booking System Registration</title>
    <link rel="stylesheet" href="~/theme/login.css">
    <link href="~/new-theme/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/new-theme/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>

    <section class="vh-130" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                    <p style="color:red">@ViewBag.Error</p>
                                    <form class="mx-1 mx-md-4" action="/Account/User" method="post">

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example1c">Your Name</label>
                                                <input asp-for="Name" type="text" id="form3Example1c" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example3c">Your Email</label>

                                                <input asp-for="Email" type="email" id="form3Example3c" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4c">Password</label>
                                                <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">Phone</label>
                                                <input asp-for="Phone" id="form3Example4cd" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-3">
                                            <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">Address</label>
                                                <input asp-for="Address" id="form3Example4cd" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-check mb-1">
                                            <input asp-for="Vendor" class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                            <label class="form-check-label" for="form2Example3">
                                                Is Vendor
                                            </label>
                                        </div>
                                        <div class="mb-3 mb-lg-4">
                                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Register</button>
                                        </div>
                                        <div class="">
                                            Already have an account? <a href="/Account/Login">Sign in</a>
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>