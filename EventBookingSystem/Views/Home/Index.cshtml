}



<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#header-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1">
                <img class="img-fluid" src="~/new-theme/img/image1.jpg" alt="Image">
            </button>
            <button type="button" data-bs-target="#header-carousel" data-bs-slide-to="1" aria-label="Slide 2">
                <img class="img-fluid" src="~/new-theme/img/image2.jpg" alt="Image">
            </button>
            <button type="button" data-bs-target="#header-carousel" data-bs-slide-to="2" aria-label="Slide 3">
                <img class="img-fluid" src="~/new-theme/img/image3.jpg" alt="Image">
            </button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/new-theme/img/image1.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 1400px;">
                        <h4 class="text-white text-case mb-4 animated zoom"></h4>
                        <h1 class="display-1 text-white mb-0 animated zoomIn">Event planning with effortless booking & seamless management</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/new-theme/img/image2.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 1200px;">
                        <h4 class="text-white text-uppercase mb-4 animated zoomIn"></h4>
                        <h1 class="display-1 text-white mb-0 animated zoomIn">Extremely Good Services with Good Quality</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/new-theme/img/image3.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 1400px;">
                        <h4 class="text-white text-uppercase mb-4 animated zoomIn"></h4>
                        <h1 class="display-1 text-white mb-0 animated zoomIn">Effortlessly reserve your perfect event space with just a few clicks</h1>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->
<!-- Facts Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="fact-item bg-light rounded text-center h-100 p-5">
                    <i class="fa fa-certificate fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">Total Marriage Hall</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">@ViewBag.TotalMarriageHall</h1>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="fact-item bg-light rounded text-center h-100 p-5">
                    <i class="fa fa-users-cog fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">Services</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">@ViewBag.TotalServices</h1>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="fact-item bg-light rounded text-center h-100 p-5">
                    <i class="fa fa-check fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">Booked Hall</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">@ViewBag.BookedHall</h1>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="fact-item bg-light rounded text-center h-100 p-5">
                    <i class="fa fa-users fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">Customers</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">@ViewBag.TotalUsers</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Facts End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="img-border">
                    <img class="img-fluid" src="~/new-theme/img/about.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="h-100">
                    <h6 class="section-title bg-white text-start text-primary pe-3">About Us</h6>
                    <h1 class="display-6 mb-4">Event Booking System<span class="text-primary"></span></h1>
                    <p>At Event Booking System, we are committed to transforming how events are planned and executed. Our team of experienced professionals brings a wealth of industry knowledge to create a platform that prioritizes user experience and operational efficiency. We provide comprehensive tools that simplify the entire process, from selecting the perfect venue to managing invitations and registrations. Our mission is to empower event organizers with innovative solutions that not only save time and effort but also ensure that every detail is meticulously handled. With a focus on customer satisfaction and cutting-edge technology, we strive to make every event a memorable success</p>
                    <p class="mb-4">
                    <div class="d-flex align-items-center mb-4 pb-2">
                            <img class="flex-shrink-0 rounded-circle" src="~/new-theme/img/resize-17230464291802870727ehtisham.jpg" alt="" style="width: 50px; height: 50px;">
                        <div class="ps-4">
                            <h6>Event</h6>
                            <small>Event Booking System</small>
                        </div>
                    </div>
                        <a class="btn btn-primary rounded-pill py-3 px-5" href="https://localhost:7109/Home/About">Read More</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 700px;">
            <h6 class="section-title bg-white text-center text-primary px-3">Our Marriage Hall</h6>
            <h1 class="display-6 mb-4">Create unforgettable memories in an exquisite venue</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <a class="service-item d-block rounded text-center h-100 p-4" href="/MarriageHall/Detail/@item.Id">
                        <img class="img-fluid rounded mb-4" src="@item.ImageUrl" alt="">
                        <h4 class="mb-0">@item.Name</h4>
                    </a>
                </div>


            }
        </div>
    </div>
</div>
<!-- Service End -->
<!-- Feature Start -->

<!-- Feature End -->
<!-- Project Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h6 class="section-title bg-white text-center text-primary px-3">Our Services</h6>
            <h1 class="display-6 mb-4">Extremely Good Services with Good Quality</h1>
        </div>
        <div class="owl-carousel project-carousel wow fadeInUp" data-wow-delay="0.1s">
            @foreach (var item in services)
            {
                <div class="project-item border rounded h-100 p-4" data-dot="0@(serviceCounter)">
                    <div class="position-relative mb-4">
                        <img class="img-fluid rounded" src="@item.ImageUrl" alt="">
                        <a href="@item.ImageUrl" data-lightbox="project"><i class="fa fa-eye fa-2x"></i></a>
                    </div>
                    <h6>@item.Name</h6>
                    <span>@item.Detail</span>
                </div>
                serviceCounter++;
            }
            


        </div>
    </div>
</div>
<!-- Project End -->
